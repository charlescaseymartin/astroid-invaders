{
  "name": "astroid-invaders",
  "version": "1.0.0",
  "description": "Astroid Invaders is a multiplayer game base off of Space Invaders that gives player a chance to build a team of upto four pilots each with their own special powerups and abilities.",
  "main": "./src/index.ts",
  "scripts": {
    "build:client": "cd ./client && yarn build",
    "build:server": "webpack",
    "build": "yarn build:client; yarn build:server",
    "start": "node ./dist/index.js",
    "clean": "rm -rf ./dist ./client/build",
    "start:prod": "NODE_ENV=production yarn clean && yarn build && yarn start",
    "start:dev": "NODE_ENV=development concurrently \"nodemon ./src/index.ts\" \"cd ./client && npm start\"",
    "test:jest": "jest --forceExit --detectOpenHandles",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/database/index.ts",
    "migration:show": "yarn typeorm migration:show",
    "migration:generate": "yarn typeorm migration:generate",
    "migration:create": "typeorm migration:create",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "migration:drop": "yarn typeorm migration:drop",
    "schema:sync": "yarn typeorm schema:sync",
    "schema:log": "yarn typeorm schema:log"
  },
  "keywords": [
    "Astroid Invaders",
    "Web-based game",
    "Space Invaders"
  ],
  "author": "Charles-Casey Martin",
  "license": "MIT",
  "dependencies": {
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/webpack-node-externals": "^3.0.4",
    "concurrently": "^9.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.0",
    "socket.io-client": "^4.8.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "_moduleAliases": {
    "@client": "./client",
    "@entities": "./src/database/entities"
  }
}
